<h2>Contact me</h2>
<form action="/contact/send-message" method="POST" enctype="multipart/form-data">
  {{#if isSent}}
    <div class="isSent">
      <div>
        <p>The message has been sent</p>
        <p>File {{fileName}} has been saved!</p>
      </div>
      <div>
        <img src="../uploads/{{uploadedPic}}">
      </div>
    </div>
  {{/if}}
  {{#if isError}}
    <div class="isError">
      <p>Please complete the form before sending</p>
    </div>
  {{/if}}
  <label>
    Your name: <input type="text" name="author" value="test name">
  </label>
  <label>
    Your email: <input type="email" name="sender" value="tes@ts.ds">
  </label>
  <label>
    Title: <input type="text" name="title" value="test title">
  </label>
  <label>
    Project desing: <input type="file" name="projectDesign" accept="image/png, image/gif, image/jpeg, image/jpg">
  </label>
  <label>
    Message: <textarea name="message"></textarea>
  </label>
  <button type="submit">Send message</button>
</form>